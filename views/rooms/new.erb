<%= erb :'components/header' %>

<div class="ui text container">
  <h1 class="ui inverted header">
    Add a room
  </h1>
  <h2>Complete this form to list a room.</h2>
</div>

</div>


<div class="ui middle aligned container">

  <div class="ui hidden divider"></div>

<form action="/rooms/new" method="post" class="ui form">

  <div class="inline fields">
    <div class="one wide field"><label>Property Name</label></div>
    <div class="five wide field"><input type="text" name="name" id="property-name-field" placeholder="DD/MM/YYYY"></div>
  </div>

  <div class="inline fields">
    <div class="one wide field"><label>Location</label></div>
    <div class="eight wide field"><input name="location" id="property-location-field" placeholder="Put in your name and contact details"></div>
  </div>

  <div class="inline fields">
    <div class="one wide field"><label>Property Description</label></div>
    <div class="eight wide field"><textarea name="description" id="property-description-field" placeholder="Put in your name and contact details"></textarea></div>
  </div>

  <div class="inline fields">
    <div class="one wide field"><label>Start Date</label></div>
    <div class="five wide field"><input type="text" name="start_date" id="start-date-field" placeholder="DD/MM/YYYY"></div>
  </div>

  <div class="inline fields">
    <div class="one wide field"><label>End Date</label></div>
    <div class="five wide field"><input type="text" name="end_date" id="end-date-field" placeholder="DD/MM/YYYY"></div>
  </div>

  <div class="inline fields">
    <div class="one wide field"></div>
    <div class="ui checkbox eight wide field">
      <input type="checkbox" tabindex="0" class="hidden">
      <label>I agree to the Terms and Conditions</label>
    </div>
  </div>
  <button class="ui button" type="submit" id="submit-button">Submit</button>
</form>

</div>
