<%= erb :'components/header' %>

<div class="ui text container">
  <h1 class="ui inverted header">
    Book a room
  </h1>
  <h2>Complete this form to reserve a room.</h2>
</div>

</div>


<div class="ui middle aligned container">

  <div class="ui hidden divider"></div>


  <form action="/bookings/new/<%= @room_id %>" method="post" class="ui form">

    <div><em>Booking for <%= @room_id %></em></div>

    <div class="inline fields">
      <div class="one wide field"><label>Select Date</label></div>
      <div class="five wide field">
        <div class="ui selection dropdown">
          <input type="hidden" name="slot">
          <i class="dropdown icon"></i>
          <div class="default text">Select the date you want</div>
          <div class="menu">
            <%= @available_dates.join("") %>
          </div>
        </div>
      </div>
    </div>

    <div class="inline fields">
      <div class="one wide field"><label>Why do you want it?</label></div>
      <div class="eight wide field"><textarea name="comments" id="comments-field" placeholder="Put in your name and contact details"></textarea></div>
    </div>

    <div class="inline fields">
      <div class="one wide field"></div>
      <div class="ui checkbox eight wide field">
        <input type="checkbox" tabindex="0">
        <label>I agree to the Terms and Conditions</label>
      </div>
    </div>

    <button class="ui button" type="submit" id="submit-button">Submit</button>

  </form>

  <div class="ui hidden divider"></div>

</div>
